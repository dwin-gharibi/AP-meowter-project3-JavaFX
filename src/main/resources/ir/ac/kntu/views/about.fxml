<StackPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ir.ac.kntu.controllers.IntroController">

    <VBox alignment="CENTER" spacing="20">
        <ImageView fitWidth="80" fitHeight="70">
            <Image url="@/images/logo.png" />
        </ImageView>
        <Text text="Welcome to Meowter" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #1DA1F2;" />
        <Text text="Discover amazing features and connect with others." style="-fx-font-size: 14px; -fx-fill: #657786;" />
        <Button text="Next" onAction="#handleNext" style="-fx-background-color: #1DA1F2; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 5;" />
    </VBox>
